# üèÅ Garage Focus - Environment Configuration
# Copy this file to .env and update the values for your local setup

# Flask Configuration
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=8000

# MongoDB Configuration
# For local MongoDB installation:
MONGO_URI=mongodb://localhost:27017/garage_focus

# For MongoDB Atlas (cloud):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/garage_focus?retryWrites=true&w=majority

# Database Name
MONGO_DB_NAME=garage_focus

# Application Settings
APP_NAME=Garage Focus
APP_VERSION=1.0.0

# Session Configuration
SESSION_TIMEOUT=3600  # 1 hour in seconds

# Focus Session Configuration
DEFAULT_FOCUS_DURATION=25  # minutes
MIN_FOCUS_DURATION=5      # minimum minutes for progress
GRACE_PERIOD=10           # seconds before session fails when tab is switched

# Car Restoration Configuration
TOTAL_MINUTES_FOR_100_PERCENT=300  # 5 hours total to complete a car
SCRAP_METAL_PER_MINUTE=1          # reward rate

# Development Settings
ENABLE_DEBUG_ROUTES=False
LOG_LEVEL=INFO

# PWA Configuration
PWA_NAME=Garage Focus
PWA_SHORT_NAME=GarageFocus
PWA_THEME_COLOR=#1a1a1a
PWA_BACKGROUND_COLOR=#0d1117

# Security (for production)
# SSL_REDIRECT=True
# SSL_FORCE=True

# Example MongoDB Atlas connection string format:
# mongodb+srv://<username>:<password>@<cluster-name>.mongodb.net/<database-name>?retryWrites=true&w=majority

# Instructions:
# 1. Copy this file to .env
# 2. Update FLASK_SECRET_KEY with a random secret key
# 3. Set up your MongoDB connection (local or Atlas)
# 4. Adjust other settings as needed
# 5. Never commit your .env file to version control!
